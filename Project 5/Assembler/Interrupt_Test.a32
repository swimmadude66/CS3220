; Addresses for I/O
.NAME 	IOBASE	= 0xF0000000
.NAME	OFSHEX	= 0x00000000
.NAME	OFSLEDR	= 0x00000004
.NAME	OFSLEDG	= 0x00000008
.NAME	OFSKEY 	= 0x00000010
.NAME	KCTL	= 0x00000110
.NAME	SW     	= 0x00000014
.NAME	SWCTL	= 0x00000114
.NAME	TIMER  	= 0x00000020
.NAME	TLIM	= 0x00000024
.NAME	TCTL	= 0x00000120

.ORIG 0x0		;Interrupt Handler
	addi	SSP, SSP, 8		;Move SSP up two
	sw		a0, -4(SSP)		;Store A0
	sw		a1, 0(SSP)		;Store A1
	RSR		a0, IDN			;Get Device Number
	xor		a1, a1, a1		;Fill a1 with zeros
	beq		a0, a1, DEVICEZERO
	addi	a1, a1, 1
	beq		a0, a1, DEVICEONE
	addi	a1, a1, 1
	beq		a0, a1, DEVICETWO
	addi	a1, a1, 1
	beq		a0, a1, DEVICETHREE
AFTERINT:
	subi	SSP, SSP, 8
	lw		a1, 8(SSP)
	lw		a0,	4(SSP)
	RETI

.ORIG 0x40
SetUp:
	xor		fp,fp,fp
	; Prepare the gp register
	mvhi	gp,IOBASE
	xor		a0,a0,a0
	addi	SSP, a0, 0x7000
	sw		a0, OFSHEX(gp)
	sw		a0, OFSLEDR(gp)
	sw		a0,	OFSLEDG(gp)
	WSR		IHA, a0
	addi	a1, a0, 1
	WSR		PCS, a1
StartTimer:
	addi	s0, a0, 1000
	sw		s0, TLIM(gp)
	sw		a0, TIMER(gp)
WaitForInterrupt:
	lw		a1, OFSLEDR(gp)
	addi	a1, a1, 1
	sw		a1, OFSLEDR(gp)
	RSR		a1, IDN
	sw		a1, OFSHEX(gp)
	bt		t0, t0, WaitForInterrupt
	
	
	
DEVICEZERO:
	xor		a0, a0, a0
	addi	a1, a0, 0x000F
	sw		a1, OFSHEX(gp)
	bt		a0, a0, AFTERINT
DEVICEONE:
	xor		a0, a0, a0
	addi	a1, a0, 0x0001
	sw		a1, OFSHEX(gp)
	bt		a0, a0, AFTERINT
DEVICETWO:
	xor		a0, a0, a0
	addi	a1, a0, 0x0002
	sw		a1, OFSHEX(gp)
	bt		a0, a0, AFTERINT
DEVICETHREE:
	xor		a0, a0, a0
	addi	a1, a0, 0x0003
	sw		a1, OFSHEX(gp)
	bt		a0, a0, AFTERINT
	